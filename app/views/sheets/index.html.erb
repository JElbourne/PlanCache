<h1>Listing sheets</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>String</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheets.each do |sheet| %>
      <tr>
        <td><%= image_tag sheet.image.url(:thumb) %></td>
        <td><%= sheet.description %></td>
        <td><%= sheet.user.email if sheet.user %></td>
        <td><%= link_to 'Show', sheet %></td>
        <% if sheet.user == current_user %>
          <td><%= link_to 'Edit', edit_sheet_path(sheet) %></td>
          <td><%= link_to 'Destroy', sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Sheet', new_sheet_path %>
<% end %>

